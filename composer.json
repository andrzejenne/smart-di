{
    "name": "bigbit/smart-di",
    "description": "SmartContainer evolved from ODDIN ExampleContainer",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Andrzej Heczko",
            "email": "andrzej.heczko@gmail.com"
        }
    ],

    "minimum-stability": "stable",

    "provide": {
        "psr/container": "~1.0.0"
    },

    "autoload": {
        "psr-4": {
            "BigBIT\\SmartDI\\": "src/"
        }
